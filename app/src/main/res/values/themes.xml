<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TinkoffKinopoisk" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="materialButtonStyle">@style/Widget.TinkoffKinopoisk.Button</item>

        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Widget.TinkoffKinopoisk.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="Widget.TinkoffKinopoisk.LightButton" parent="Widget.TinkoffKinopoisk.Button">
        <item name="backgroundTint">@color/blue_light</item>
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>